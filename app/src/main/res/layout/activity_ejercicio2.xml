        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="452dp" />


    <EditText
        android:id="@+id/edtMenAl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensaje Alarma 3"
